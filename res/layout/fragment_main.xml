<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rwth.i10.exercisegroups.Activitys.MainActivity$PlaceholderFragment" xmlns:app="http://schemas.android.com/apk/res/com.rwth.i10.exercisegroups">

    <!-- The main content view -->

    <com.rwth.i10.exercisegroups.Util.SlidingUpPanelLayout
        android:id="@+id/left_drawer_sliding_up_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom" >

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        
        <FrameLayout
            android:id="@+id/sliding_up_panal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:gravity="center|top"></FrameLayout>
        
    </com.rwth.i10.exercisegroups.Util.SlidingUpPanelLayout>
    <!-- The navigation drawer -->

    <RelativeLayout
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#fff" >

        <LinearLayout
            android:id="@+id/left_drawer_filter_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/left_drawer_filter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Filter" >

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/left_drawer_filter_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="filter" />
        </LinearLayout>

        <Button
            android:id="@+id/left_drawer_view_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/left_drawer_filter_layout"
            android:text="List View" />

        <Button
            android:id="@+id/left_drawer_create_group_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/left_drawer_view_btn"
            android:text="Create Group" />

        <Button
            android:id="@+id/left_drawer_profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/left_drawer_create_group_btn"
            android:text="Edit Profile" />

        <Button
            android:id="@+id/left_drawer_profile_change_status"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/left_drawer_profile_btn"
            android:drawableStart="#FE4848" />

        <ListView
            android:id="@+id/left_drawer_group_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/left_drawer_profile_btn"
            android:choiceMode="singleChoice"
            android:divider="@android:color/white"
            android:dividerHeight="0dp" />
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>