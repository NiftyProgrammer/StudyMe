<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rwth.i10.exercisegroups.Activitys.MainActivity$PlaceholderFragment" >

    <!-- The main content view -->

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- The navigation drawer -->

    <RelativeLayout
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#fff" >

        <Button
            android:id="@+id/left_drawer_view_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List View" />

        <Button
            android:id="@+id/left_drawer_create_group_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/left_drawer_view_btn"
            android:text="Create Group" />

        <Button
            android:id="@+id/left_drawer_profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/left_drawer_create_group_btn"
            android:text="Edit Profile" />

        <Button
            android:id="@+id/left_drawer_profile_change_status"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/left_drawer_profile_btn"
            android:layout_alignParentRight="true"
            android:drawableStart="#FE4848" />

        <ListView
            android:id="@+id/left_drawer_group_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/left_drawer_profile_btn"
            android:choiceMode="singleChoice"
            android:divider="@android:color/white"
            android:dividerHeight="0dp" />
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>